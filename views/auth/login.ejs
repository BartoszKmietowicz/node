<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="login">
                <% if(errorMessage){ %>
                <div class="user-message user-message__error"><%=errorMessage %></div>
                <% }%>
                <form class="login-form" action="/login" method="POST" novalidate>
                    
                    <div class="login-form__control">
                        <label for="email">E-mail</label>
                        <input class="<%=validationErrors.email ? 'invalid': ''%>" value="<%=oldInput.email%>" type="email" name="email" id="email" />
                    </div>
                  
                    <div class="login-form__control">
                        <label for="password">password</label>
                        <input class="<%=validationErrors.password ? 'invalid': ''%>" value="<%=oldInput.password%>" type="password" name="password" id="password" >
                    </div>
                 <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <button class="btn login" type="submit">Login</button>
                </form>
                <a href="/reset">Reset Password</a>
            </main>
            <%- include('../includes/end.ejs') %>