<%- include('../includes/head.ejs') %>
    </head>

    <body>

        <%- include('../includes/navigation.ejs') %>
            <main class="cart">
                <h1>orders</h1>
                <% if (orders.length<=0) { %>
                    <h1>no orders yet</h1>
                    <% } else { %>
                        <ul class="cart__item__list">
                            <% orders.forEach(order=>{ %>
                                <li class="cart__item product__item">
                                    <h1>#
                                        <%= order._id %>
                                    </h1>
                                    <ul class="cart__item__list">
                                        <% order.items.forEach(product=> { %>
                                            <li class="cart__item product__item">
                                                title :
                                                <%= product.title %> { quantity:
                                                    <%= product.quantity%>}
                                            </li>
                                            <% }); %>
                                    </ul>
                                </li>
                                <% })%>
                        </ul>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>