<body>
    <%- include('../includes/navigation.ejs') %>
    <h1>orders</h1>
    <% if (orders.length<=0) { %>
        <h1>no orders yet</h1>
        <% } else { %>
            <ul>
                <% orders.forEach(order=>{ %>
                <li class="orderList">
                    
                    <div>
                        <h1> Order - # <%= order._id %> </h1>
                        <a class="add-product" href="/orders/<%=order._id%>">Invoice</a>
                    </div>
                    <ul>
                        <% order.products.forEach(p=> { %>
                        <li>
                           <%= p.product.title %> ( <%= p.quantity%> ) 
                        </li>
                        <% }); %>
                    </ul>
                </li>
                <% })%>
            </ul>
            <% } %>

<%- include('../includes/end.ejs') %>
  